<html lang="en">

  <head>
    {{>headerLinks}}
  </head>

  <body>
    <!-- NAVBAR -->
    {{>navbar}}
    <!-- NAVBAR -->

    <!-- MAIN -->
    <div class="container-fluid home__main">
      <div class="row">
        <div class="col-12 col-md-10 mx-auto">
          <div class="row">

            <!-- MAIN-LEFT -->
            <div class="col-12 col-md-6 home__left">
              <p>Welcome to weather app</p>
              <h1>Get the latest <span>weather</span> info of your city</h1>
              <a href="/weather"><button>Check Now</button></a>
            </div>
            <!-- MAIN-LEFT -->

            <!-- MAIN-RIGHT -->
            <div class="col-12 col-md-6 home__right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      class="w-100"
                      src="images/caro-2.png"
                      alt="First slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="w-100"
                      src="images/caro-2.png"
                      alt="Second slide"
                    />
                  </div>
                </div>
                <a
                  class="carousel-control-prev"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a
                  class="carousel-control-next"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
            <!-- MAIN-RIGHT -->
          </div>
        </div>
      </div>
    </div>
    <!-- MAIN -->
    <!-- FOOTER -->
    {{>footer}}
    <!-- FOOTER -->
  </body>

</html>